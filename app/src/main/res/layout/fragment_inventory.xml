<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeecef"
    tools:context="com.example.omarelaimy.iseeyou.Fragments.InventoryFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="top"
            android:layout_weight="5">


            <LinearLayout
                android:id="@+id/mainview_inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>


        <TextView
            android:id="@+id/empty_pillstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:text="You still have no pills in your inventory!"
            android:textSize="20dp"
            android:textStyle="italic"
            android:visibility="gone"
            android:layout_weight="6"/>

        <ImageButton
            android:id="@+id/add_inventory_pill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/plusgrey" />





    </LinearLayout>
</FrameLayout>
