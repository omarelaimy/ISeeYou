<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcomescreen">

    <!--Welcome Page 5-->
    <!--Logo above blurred -->
    <ImageView
        android:id="@+id/logo_blurred"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/logo_blurred"

        />


    <!--Slide 1 Logo -->
    <ImageView
        android:id="@+id/statistics_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/statistics2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Slide 1 Title -->
    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/_25ssp"
        android:textColor="#FFFFFF"
        android:layout_above="@id/Description"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true" />


    <!--Slide 5 description -->
    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily,weekly and monthly reports on heart rate along with the patient's behavior towards taking the pills schedule."
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:textAlignment="center"
        android:textSize="@dimen/_16ssp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>